<Window x:Class="ui.AdminWorkspacePages.BalanceEditor"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Пополнение баланса" Height="204" Width="405" ResizeMode="NoResize">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Label x:Name="nameLabel" Content="Пополнение баланса" Margin="10,10,10,0" VerticalAlignment="Top" Height="70" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" FontSize="24"/>
        <Button x:Name="addButton" Content="Пополнить" HorizontalAlignment="Left" VerticalAlignment="Top" Height="43" Width="376" IsCancel="True" Margin="10,113,0,0" Click="addButton_Click" FontSize="20" HorizontalContentAlignment="Center"/>
        <TextBox x:Name="balanceBox" HorizontalAlignment="Left" Margin="99,82,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="287" Height="26" VerticalContentAlignment="Center" HorizontalContentAlignment="Center"/>
        <Label Content="Количество" HorizontalAlignment="Left" Margin="10,82,0,0" VerticalAlignment="Top" Width="84"/>

    </Grid>
</Window>
