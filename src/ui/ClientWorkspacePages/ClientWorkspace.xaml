<Window x:Class="ui.ClientWorkspace"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ui"
        mc:Ignorable="d"
        Title="ClientWorkspace" Height="432" Width="800" WindowState="Maximized">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Button x:Name="yourTicketsButton" Content="Ваши билеты" HorizontalAlignment="Center" Margin="0,85,0,0" VerticalAlignment="Top" Height="40" Width="372" FontSize="24" Click="yourTicketsButton_Click"/>
        <Label x:Name="nameLabel" Content="Добро пожаловать!" HorizontalAlignment="Center" Margin="0,10,0,0" VerticalAlignment="Top" Height="70" Width="628" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" FontSize="24"/>
        <Button x:Name="exitButton" Content="Выход" HorizontalAlignment="Right" VerticalAlignment="Bottom" Height="40" Width="209" FontSize="24" IsCancel="True" Click="exitButton_Click" Margin="0,0,10,10"/>
        <Button x:Name="buyTicketsButton" Content="Купить билет" HorizontalAlignment="Center" Margin="0,130,0,0" VerticalAlignment="Top" Height="40" Width="372" FontSize="24" IsEnabled="False"/>

    </Grid>
</Window>
